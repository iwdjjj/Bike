@model Bike.Models.Address

@{
    ViewData["Title"] = "Details";
}

<h1>Детали</h1>

<div>
    <h4>Адреса</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MainAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MainAddress.FullAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.House)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.House)
        </dd>
    </dl>
</div>
<div>
